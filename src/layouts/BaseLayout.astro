---
const { title, description, image = "/default-og.png" } = Astro.props;
import '../styles/global.css';
---
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | Nagpur Mail</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="sitemap" href="/sitemap-index.xml" />
</head>
<body class="bg-[#F4F7F9]">
    <div class="bg-[#002b5c] text-white text-[10px] py-1.5 text-center font-bold uppercase tracking-widest">
        Nagpur's Leading News Portal - Real Time Updates
    </div>

    <nav class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
        <div class="max-w-6xl mx-auto px-4 h-20 flex justify-between items-center">
            <a href="/">
                <img src="/logo.png" alt="NAGPUR MAIL" class="h-12" />
            </a>
            <div class="hidden md:flex gap-6 text-[12px] font-black uppercase text-[#002b5c]">
                <a href="/" class="hover:text-blue-600 border-b-2 border-transparent hover:border-blue-600">Home</a>
                <a href="/category/city" class="hover:text-blue-600">City</a>
                <a href="/category/business" class="hover:text-blue-600">Business</a>
                <a href="/category/metro" class="hover:text-blue-600">Metro</a>
            </div>
        </div>
    </nav>

    <main class="max-w-6xl mx-auto px-4 py-8">
        <slot />
    </main>
</body>
</html>
