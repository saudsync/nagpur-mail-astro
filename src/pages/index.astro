---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
const posts = (await getCollection('blog')).sort((a,b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---
<BaseLayout title="Latest Stories" description="Breaking news from Nagpur">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
        <div class="lg:col-span-8">
            <h2 class="text-xl font-black border-l-4 border-blue-900 pl-3 mb-8 uppercase italic tracking-tighter">Latest Stories</h2>
            
            <div class="space-y-8">
                {posts.map(post => (
                    <article class="news-card p-4 flex flex-col md:flex-row gap-6">
                        <div class="md:w-1/3">
                            <img src={post.data.image} class="aspect-video object-cover rounded shadow-sm w-full" />
                        </div>
                        <div class="md:w-2/3">
                            <div class="flex items-center gap-2 mb-2">
                                <span class="text-[10px] font-bold text-blue-700 uppercase tracking-widest">{post.data.category}</span>
                                <span class="text-gray-300 text-xs">|</span>
                                <time class="text-[10px] text-gray-400 uppercase font-semibold">{post.data.pubDate.toDateString()}</time>
                            </div>
                            <a href={`/posts/${post.slug}`} class="group">
                                <h3 class="text-xl font-bold group-hover:text-blue-700 leading-tight mb-3">{post.data.title}</h3>
                                <p class="text-gray-600 text-sm line-clamp-2 leading-relaxed">{post.data.description}</p>
                            </a>
                        </div>
                    </article>
                ))}
            </div>
        </div>

        <aside class="lg:col-span-4">
            <div class="sticky top-24">
                <h3 class="sidebar-title">Trending News</h3>
                <div class="bg-white p-5 rounded border border-gray-100 shadow-sm">
                   <p class="text-xs text-gray-400 italic">No trending news today...</p>
                </div>
            </div>
        </aside>
    </div>
</BaseLayout>
