---
import { getCollection } from 'astro:content';
import Navigation from '../components/Navigation.astro'; // Modular Navigation
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const allPosts = (await getCollection('blog', ({ data }) => {
  return data.draft !== true; 
})).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const posts = allPosts.slice(0, 5);
const showReadMore = allPosts.length > 5;
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Nagpur Mail | Vidarbha News Portal</title>
</head>
<body>
    <div class="top-bar">Nagpur's #1 News Portal - Real Time Updates</div>
    
    <Navigation /> <div class="container">
        <div class="main-wrapper">
            <main>
                <div style="border-bottom: 2px solid #002b5c; margin-bottom: 20px;">
                    <h2 style="background: #002b5c; color: white; display: inline-block; padding: 5px 15px; font-size: 14px; font-style: italic; text-transform: uppercase;">Latest Stories</h2>
                </div>

                {posts.map(post => (
                    <article class="news-card">
                        <div class="card-image" style={`background-image: url(${post.data.image || post.data.heroImage})`}></div>
                        <div class="card-content">
                            <span style="color: #4285f4; font-size: 10px; font-weight: 900; text-transform: uppercase;">{post.data.category}</span>
                            <a href={`/posts/${post.slug}`} class="card-title">{post.data.title}</a>
                            <p style="font-size: 13px; color: #555; line-height: 1.4; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">{post.data.description}</p>
                            <div style="font-size: 10px; margin-top: 10px; color: #999; font-weight: bold;">{post.data.pubDate.toDateString()}</div>
                        </div>
                    </article>
                ))}

                {showReadMore && (
                    <div style="margin-top: 40px; text-align: center;">
                        <a href="/blog/2" style="background: #002b5c; color: white; padding: 14px 30px; text-decoration: none; font-weight: bold; border-radius: 5px; display: inline-block; font-size: 12px; letter-spacing: 1px;">
                            READ MORE POSTS â†’
                        </a>
                    </div>
                )}
            </main>

            <Sidebar />
        </div>
    </div>

    <Footer /> 
</body>
</html>
