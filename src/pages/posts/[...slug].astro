---
import { getCollection } from 'astro:content';
import Sidebar from '../../components/Sidebar.astro';
import '../../styles/global.css';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{entry.data.title} | Nagpur Mail</title>
</head>
<body>
    <div class="top-bar">Nagpur's #1 News Portal - Real Time Updates</div>
    
    <nav class="main-nav">
        <div class="container nav-content">
            <div class="logo">
                <a href="/"><img src="/logo.png" alt="NAGPUR MAIL" style="height: 45px;"></a>
            </div>
            <div style="display: flex; gap: 15px; font-weight: 800; font-size: 11px; color: #002b5c; letter-spacing: -0.5px;">
                <a href="/">HOME</a> <a href="#">CITY</a> <a href="#">METRO</a> <a href="#">CRIME</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="main-wrapper">
            <main style="background: white; padding: 20px; border: 1px solid #e1e8ed;">
                <div style="margin-bottom: 10px;">
                    <span style="background: #002b5c; color: white; font-size: 10px; font-weight: bold; padding: 4px 10px; text-transform: uppercase; font-style: italic;">
                        {entry.data.category}
                    </span>
                </div>

                <h1 style="font-size: 28px; md:font-size: 36px; color: #002b5c; font-weight: 900; text-transform: uppercase; font-style: italic; line-height: 1.1; margin-bottom: 20px;">
                    {entry.data.title}
                </h1>

                <div style="display: flex; gap: 15px; font-size: 11px; color: #888; font-weight: bold; border-top: 1px solid #eee; border-bottom: 1px solid #eee; padding: 10px 0; margin-bottom: 25px; text-transform: uppercase;">
                    <span>By <span style="color: #4285f4;">{entry.data.author}</span></span>
                    <span>{entry.data.pubDate.toDateString()}</span>
                </div>

                <img src={entry.data.image} alt={entry.data.title} style="width: 100%; height: auto; margin-bottom: 30px; border-bottom: 3px solid #002b5c;" />

                <div class="post-body-content">
                    <Content />
                </div>

                <div style="margin-top: 40px; padding-top: 20px; border-top: 1px solid #eee; display: flex; gap: 10px;">
                    <span style="font-size: 12px; font-weight: bold; color: #999;">SHARE:</span>
                    <div style="width: 30px; height: 30px; background: #3b5998; border-radius: 2px;"></div>
                    <div style="width: 30px; height: 30px; background: #25d366; border-radius: 2px;"></div>
                </div>
            </main>

            <Sidebar />
        </div>
    </div>

    <footer class="main-footer">
        <div class="container">
            <div class="footer-grid">
                <div>
                    <h3 class="footer-title">About Us</h3>
                    <p style="font-size: 13px; line-height: 1.6;">Nagpur Mail is your dedicated news portal for the latest updates in and around the Orange City.</p>
                </div>
                <div>
                    <h3 class="footer-title">Main Categories</h3>
                    <ul class="footer-links">
                        <li>City News</li>
                        <li>Metro Updates</li>
                        <li>Business</li>
                    </ul>
                </div>
                <div>
                    <h3 class="footer-title">Follow Us</h3>
                    <div style="display: flex; gap: 10px;">
                        <div style="width: 35px; height: 35px; background: #1e293b; border-radius: 50%;"></div>
                        <div style="width: 35px; height: 35px; background: #1e293b; border-radius: 50%;"></div>
                    </div>
                </div>
            </div>
            <div style="text-align: center; padding-top: 20px; font-size: 11px; color: #64748b; font-weight: bold; text-transform: uppercase;">
                Â© 2026 NAGPUR MAIL - ALL RIGHTS RESERVED
            </div>
        </div>
    </footer>
</body>
</html>

<style is:global>
    /* This fixes the text appearance inside the article */
    .post-body-content p {
        margin-bottom: 20px;
        font-size: 17px;
        line-height: 1.7;
        color: #444;
    }
    .post-body-content h2 {
        font-size: 22px;
        color: #002b5c;
        font-weight: 900;
        text-transform: uppercase;
        margin-top: 30px;
        margin-bottom: 15px;
        font-style: italic;
    }
    .post-body-content ul {
        margin-left: 20px;
        margin-bottom: 20px;
    }
</style>
