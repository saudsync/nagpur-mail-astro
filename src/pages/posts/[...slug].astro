---
import { getCollection } from 'astro:content';
import Navigation from '../../components/Navigation.astro';
import Sidebar from '../../components/Sidebar.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Logic for related posts ("You might like")
const allBlogPosts = await getCollection('blog');
const relatedPosts = allBlogPosts
  .filter(p => p.slug !== entry.slug && p.data.tags?.some(tag => entry.data.tags?.includes(tag)))
  .slice(0, 4);

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const encodedUrl = encodeURIComponent(canonicalURL);
const encodedTitle = encodeURIComponent(entry.data.title);
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{entry.data.title} | Nagpur Mail</title>
</head>
<body>
    <div class="top-bar">Nagpur's #1 News Portal - Real Time Updates</div>
    
    <Navigation /> 
    
    <div class="container">
        <div class="main-wrapper">
            <main style="background: white; padding: 20px; border: 1px solid #e1e8ed;">
                <div style="margin-bottom: 10px;">
                    <span style="background: #002b5c; color: white; font-size: 10px; font-weight: bold; padding: 4px 10px; text-transform: uppercase; font-style: italic;">
                        {entry.data.category}
                    </span>
                </div>

                <h1 style="font-size: 28px; color: #002b5c; font-weight: 900; text-transform: uppercase; font-style: italic; line-height: 1.1; margin-bottom: 20px;">
                    {entry.data.title}
                </h1>

                <div style="display: flex; gap: 15px; font-size: 11px; color: #888; border-top: 1px solid #eee; border-bottom: 1px solid #eee; padding: 10px 0; margin-bottom: 25px; text-transform: uppercase;">
                    <span>By <span style="color: #4285f4;">{entry.data.author}</span></span>
                    <span>{entry.data.pubDate.toDateString()}</span>
                </div>

                <img src={entry.data.image} alt={entry.data.title} style="width: 100%; height: auto; margin-bottom: 30px; border-bottom: 3px solid #002b5c;" />

                <div class="post-body-content text-justify">
                    <Content />
                </div>

                <div class="share-block">
                    <span class="share-label">Share:</span>
                    <a href={`https://api.whatsapp.com/send?text=${encodedTitle}%20${encodedUrl}`} target="_blank" rel="noopener">
                        <svg viewBox="0 0 24 24" width="30" height="30"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" fill="#25D366"/></svg>
                    </a>
                </div>

                {relatedPosts.length > 0 && (
                <section class="related-section">
                    <h3 class="related-title">You might like</h3>
                    <div class="related-grid">
                        {relatedPosts.map(post => (
                            <a href={`/posts/${post.slug}`} class="related-card">
                                <div class="related-img-container">
                                    <img src={post.data.image || post.data.heroImage} alt={post.data.title} />
                                </div>
                                <h4>{post.data.title}</h4>
                            </a>
                        ))}
                    </div>
                </section>
                )}
            </main>

            <Sidebar />
        </div>
    </div>
    <Footer />
</body>
</html>

<style is:global>
    .post-body-content p {
        margin-bottom: 20px;
        font-size: 17px;
        line-height: 1.7;
        color: #444;
    }
    .share-block {
        margin-top: 40px;
        padding-top: 20px;
        border-top: 1px solid #eee;
        display: flex;
        align-items: center;
        gap: 12px;
    }
    .share-label {
        font-size: 14px;
        font-weight: 900;
        color: #002b5c;
        text-transform: uppercase;
        font-style: italic;
    }

    /* Related Posts Grid Styles */
    .related-section {
        margin-top: 50px;
        padding-top: 30px;
        border-top: 2px solid #002b5c;
    }
    .related-title {
        font-size: 18px;
        color: #002b5c;
        font-weight: 900;
        text-transform: uppercase;
        margin-bottom: 20px;
        font-style: italic;
    }
    .related-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* 2x2 grid */
        gap: 20px;
    }
    .related-card {
        text-decoration: none;
        color: inherit;
    }
    .related-img-container {
        width: 100%;
        height: 120px;
        overflow: hidden;
        border-radius: 4px;
        margin-bottom: 10px;
    }
    .related-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    .related-card:hover img {
        transform: scale(1.05);
    }
    .related-card h4 {
        font-size: 14px;
        font-weight: 800;
        line-height: 1.3;
        color: #333;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    @media (max-width: 480px) {
        .related-grid {
            gap: 10px;
        }
        .related-img-container {
            height: 100px;
        }
        .related-card h4 {
            font-size: 12px;
        }
    }
</style>
